<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Del lugar"
            android:id="@+id/txt_nombreLugar"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="200dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="30dp"
            android:id="@+id/txt_nombrar"
            android:layout_below="@+id/txt_nombreLugar"
           />


        <Button android:id="@+id/btnAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hacercar"
            android:layout_below="@+id/txt_nombrar"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>